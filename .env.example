# ===========================================
# IconsAI Scraping v2.0 - Configuracao
# Business Intelligence Brasil
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=false

# ===========================================
# APIs de Dados Brasileiros (Gratuitas)
# ===========================================

# BrasilAPI - Dados públicos brasileiros
# URL: https://brasilapi.com.br (gratuito, sem limite)
BRASIL_API_URL=https://brasilapi.com.br/api

# ===========================================
# APIs de Busca
# ===========================================

# Serper.dev - Google Search API
# URL: https://serper.dev (2.500 buscas grátis)
SERPER_API_KEY=your_serper_api_key_here
SERPER_BASE_URL=https://google.serper.dev
SERPER_RATE_LIMIT=100

# Tavily - AI Search & News
# URL: https://tavily.com (1.000/mês grátis)
TAVILY_API_KEY=your_tavily_api_key_here
TAVILY_BASE_URL=https://api.tavily.com
TAVILY_RATE_LIMIT=50

# ===========================================
# APIs de AI/Research
# ===========================================

# Perplexity - AI Research
# URL: https://perplexity.ai
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_RATE_LIMIT=50

# Anthropic Claude - AI Analysis
# URL: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===========================================
# APIs de Dados B2B (Opcional)
# ===========================================

# Apollo.io - LinkedIn & Contatos B2B
# URL: https://apollo.io (freemium)
APOLLO_API_KEY=your_apollo_api_key_here
APOLLO_BASE_URL=https://api.apollo.io/v1
APOLLO_RATE_LIMIT=100

# ===========================================
# Banco de Dados
# ===========================================

# Supabase
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Direct DB Connection (para migrações)
# Obter em: Supabase > Settings > Database > Connection string
DATABASE_URL=postgresql://postgres:PASSWORD@db.xxx.supabase.co:5432/postgres

# Redis (opcional - para cache distribuído)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Rate Limiting & Cache
# ===========================================

RATE_LIMIT_PERIOD=60
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===========================================
# Logging
# ===========================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Autenticação API
# ===========================================

# JWT para autenticação da API
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ===========================================
# Web Scraping
# ===========================================

# Playwright
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
